<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jobPortal.activities.company.StudentListCmnyActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yelolow"
        android:text="List of Students"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/available_studentlist"
        android:layout_width="wrap_content"
        android:layout_height="338dp"
        android:layout_weight="6.68" />

  <ProgressBar
        android:id="@+id/progressBar_student_list"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/progress_indeterminate_horizontal" />

    <Button
        android:id="@+id/apply_stud_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.19"
        android:background="@color/yelolow"
        android:onClick="applyStudents"
        android:text="Recruit Student" />

</LinearLayout>