<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3e3e3e" >

    <EditText
        android:id="@+id/inputCompanyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputCompanyUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:background="@layout/passwordtextbox001"
        android:drawableLeft="@drawable/passwordicon"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="15dp" />

    <Button
        android:id="@+id/btnCompanyLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/inputCompanyPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@layout/button001"
        android:padding="15dp"
        android:text="Login" />

    <EditText
        android:id="@+id/inputCompanyUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputCompanyPassword"
        android:layout_alignRight="@+id/inputCompanyPassword"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="14dp"
        android:background="@layout/usernametextbox001"
        android:drawableLeft="@drawable/usernameicon"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:padding="15dp" >
    <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputCompanyUsername"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_people" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputCompanyUsername"
        android:layout_centerHorizontal="true"
        android:text="Company Login"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/counter_text_color"
        android:textSize="20sp"
        android:textStyle="bold" />
    
    <ProgressBar
        android:id="@+id/progressCompanyBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputCompanyUsername"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textView1"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewCompanyRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewCompanyErrorMsg"
        android:layout_alignRight="@+id/btnCompanyLogin"
        android:layout_below="@+id/btnCompanyLogin"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="I don&apos;t have account. Register Me!"
        android:textColor="@color/list_item_title" />

    <TextView
        android:id="@+id/textViewCompanyErrorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCompanyLogin"
        android:layout_alignRight="@+id/btnCompanyLogin"
        android:layout_below="@+id/textViewCompanyRegister"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>